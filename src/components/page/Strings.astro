---
import strings from '../../config/strings.json'
import '../../css/strings.css'
---

<section id="strings" class="mt-10 strings-section">
    <div class="w-5/6 m-auto flex flex-wrap justify-center">
        {
            strings.map(string => (
                <div class="w-5/6 md:w-1/3 m-10 flex flex-col justify-around text-center py-4 text-xl items-center card-string">
                    <h3 class="text-3xl font-bold">{string.title}</h3>
                    {string.description.map(description => (
                        <p class="text-md">{description}</p>
                    ))}
                    <img src={string.image} class="w-2/4" />
                </div>
            ))
        }
    </div>
</section>